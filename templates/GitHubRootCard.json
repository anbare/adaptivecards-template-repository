{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "data": "{{this}}",
  "body": [
    {
      "type": "TextBlock",
      "text":
        "Root card for {{subscriptionId}}",
      "wrap": true
    },
    {
      "type": "HostedCard",
      "id": "summaryAndLinks",
      "dataId":
        "https://management.azure.com/subscriptions/{{subscriptionId}}/resourceGroups/{{resourceGroup}}/providers/Microsoft.Web/sites/{{siteName}}?api-version=2016-08-01",
      "templateUrl":
        "https://raw.githubusercontent.com/andrewleader/adaptivecards-template-repository/master/templates/WebAppProperties.json"
    },
    {
      "type": "HostedCard",
      "id": "deployments",
      "dataId":
        "https://management.azure.com/subscriptions/{{subscriptionId}}/resourceGroups/{{resourceGroup}}/providers/Microsoft.Web/sites/{{siteName}}/deployments?api-version=2016-08-01",
      "templateUrl":
        "https://raw.githubusercontent.com/andrewleader/adaptivecards-template-repository/master/templates/Deployments.json"
    }
  ]
}
