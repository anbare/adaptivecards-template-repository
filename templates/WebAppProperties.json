{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "URL:"
            },
            {
              "type": "TextBlock",
              "spacing": "none",
              "text": "[{{properties.siteProperties.defaultHostName}}]({{properties.siteProperties.defaultHostName}})"
            },
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "Resource Group:",
              "spacing": "medium"
            },
            {
              "type": "TextBlock",
              "spacing": "none",
              "text": "{{properties.resourceGroup}}"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "Status:"
            },
            {
              "type": "TextBlock",
              "spacing": "none",
              "text": "âœ” {{properties.state}}",
              "color": "good"
            },
            {
              "type": "TextBlock",
              "weight": "bolder",
              "text": "Region:",
              "spacing": "medium"
            },
            {
              "type": "TextBlock",
              "spacing": "none",
              "text": "{{location}}"
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "[Manage Site](https://adaptivecards.io) ",
              "horizontalAlignment": "right"
            },
            {
              "type": "TextBlock",
              "text": "[Restart Site](https://adaptivecards.io) ",
              "horizontalAlignment": "right"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ]
}
