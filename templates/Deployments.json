{
  "type": "AdaptiveCard",
  "version": "1.0",

  "body": [
    {
      "type": "TextBlock",
      "text": "{{value[0].name}}"
    },
    {
      "type": "TextBlock",
      "text": "{{value[1].name}}"
    },
    {
      "type": "Container",
      "items": {
        "{{#each value}}": {
          "type": "TextBlock",
          "text": "-> {{name}} - {{properties.author}}"
        }
      }
    },
    {
      "type": "FactSet",
      "facts": {
        "{{#each value}}": {
          "title": "{{name}}",
          "value": "{{properties.author}}"
        }
      }
    }
  ]
}
