{
    "type": "AdaptiveCard",
    "body": [
        {
            "{{#each }}": 
            {
                "type": "Container",
                "items":
                [
                    {
                        "type": "TextBlock",
                        "text": "{{name}}",
                        "horizontalAlignment": "Center",
                        "size": "ExtraLarge"
                    },
                    {
                        "type": "FactSet",
                        "facts" : 
                        [
                            {
                                "{{#each hostNameSslStates}}" : {
                                    "title" : "{{name}}",
                                    "value" : "{{sslState}}"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}
